{
    "id": "com.ring",
    "name": {
        "en": "Ring"
    },
    "version": "1.0.0",
    "compatibility": "1.x",
    "author": {
        "name": "Dennie de Groot",
        "email": "mail@denniedegroot.nl",
        "website": "https://denniedegroot.nl"
    },
    "description": {
        "en": "Ring support for Homey",
        "nl": "Ring ondersteuning voor Homey"
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "drivers": [
        {
            "id": "doorbell",
            "name": {
                "en": "Video Doorbell",
                "nl": "Video Doorbell"
            },
            "images": {
                "large": "./drivers/doorbell/assets/images/large.jpg",
                "small": "./drivers/doorbell/assets/images/small.jpg"
            },
            "class": "sensor",
            "capabilities": [ "alarm_generic", "alarm_motion", "measure_battery" ],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }, {
            "id": "chime",
            "name": {
                "en": "Chime",
                "nl": "Chime"
            },
            "images": {
                "large": "./drivers/chime/assets/images/large.jpg",
                "small": "./drivers/chime/assets/images/small.jpg"
            },
            "class": "sensor",
            "capabilities": [],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }, {
            "id": "stickupcam",
            "name": {
                "en": "Stick Up Cam",
                "nl": "Stick Up Cam"
            },
            "images": {
                "large": "./drivers/stickupcam/assets/images/large.jpg",
                "small": "./drivers/stickupcam/assets/images/small.jpg"
            },
            "class": "sensor",
            "capabilities": [ "alarm_motion", "measure_battery" ],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "doorbell_firmware_changed",
                "title": {
                    "en": "Firmware changed",
                    "nl": "Firmware is veranderd"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=doorbell"
                    }
                ],
                "tokens": [
                    {
                        "name": "old_firmware",
                        "type": "string",
                        "title": {
                            "en": "old version",
                            "nl": "oude versie"
                        },
                        "example": {
                            "en": "1.0.0",
                            "nl": "1.0.0"
                        }
                    }, {
                        "name": "new_firmware",
                        "type": "string",
                        "title": {
                            "en": "new version",
                            "nl": "nieuwe versie"
                        },
                        "example": {
                            "en": "2.0.0",
                            "nl": "2.0.0"
                        }
                    }
                ]
            }, {
                "id": "chime_firmware_changed",
                "title": {
                    "en": "Firmware changed",
                    "nl": "Firmware is veranderd"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=chime"
                    }
                ],
                "tokens": [
                    {
                        "name": "old_firmware",
                        "type": "string",
                        "title": {
                            "en": "old version",
                            "nl": "oude versie"
                        },
                        "example": {
                            "en": "1.0.0",
                            "nl": "1.0.0"
                        }
                    }, {
                        "name": "new_firmware",
                        "type": "string",
                        "title": {
                            "en": "new version",
                            "nl": "nieuwe versie"
                        },
                        "example": {
                            "en": "2.0.0",
                            "nl": "2.0.0"
                        }
                    }
                ]
            }, {
                "id": "stickupcam_firmware_changed",
                "title": {
                    "en": "Firmware changed",
                    "nl": "Firmware is veranderd"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_id=stickupcam"
                    }
                ],
                "tokens": [
                    {
                        "name": "old_firmware",
                        "type": "string",
                        "title": {
                            "en": "old version",
                            "nl": "oude versie"
                        },
                        "example": {
                            "en": "1.0.0",
                            "nl": "1.0.0"
                        }
                    }, {
                        "name": "new_firmware",
                        "type": "string",
                        "title": {
                            "en": "new version",
                            "nl": "nieuwe versie"
                        },
                        "example": {
                            "en": "2.0.0",
                            "nl": "2.0.0"
                        }
                    }
                ]
            }
        ]
    }
}