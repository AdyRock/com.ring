{
    "id": "com.ring",
    "name": {
        "en": "Ring"
    },
    "version": "1.1.0",
    "compatibility": "1.x >=1.5.0",
    "sdk": 2,
    "author": {
        "name": "Dennie de Groot",
        "email": "mail@denniedegroot.nl",
        "website": "https://denniedegroot.nl"
    },
    "contributors": {
        "developers": [{
            "name": "Dennie de Groot",
            "email": "mail@denniedegroot.nl",
            "website": "https://denniedegroot.nl"
        }]
    },
    "contributing": {
        "donate": {
            "paypal": {
                "username": "denniedegroot"
            }
        }
    },
    "description": {
        "en": "Ring support for Homey",
        "nl": "Ring ondersteuning voor Homey"
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "drivers": [
        {
            "id": "doorbell",
            "name": {
                "en": "Video Doorbell",
                "nl": "Video Doorbell"
            },
            "images": {
                "large": "./drivers/doorbell/assets/images/large.jpg",
                "small": "./drivers/doorbell/assets/images/small.jpg"
            },
            "class": "sensor",
            "capabilities": [ "alarm_generic", "alarm_motion", "measure_battery" ],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }, {
            "id": "chime",
            "name": {
                "en": "Chime",
                "nl": "Chime"
            },
            "images": {
                "large": "./drivers/chime/assets/images/large.jpg",
                "small": "./drivers/chime/assets/images/small.jpg"
            },
            "class": "sensor",
            "capabilities": [],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }, {
            "id": "stickupcam",
            "name": {
                "en": "Stick Up Cam",
                "nl": "Stick Up Cam"
            },
            "images": {
                "large": "./drivers/stickupcam/assets/images/large.jpg",
                "small": "./drivers/stickupcam/assets/images/small.jpg"
            },
            "class": "sensor",
            "capabilities": [ "alarm_motion", "measure_battery" ],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }
    ]
}